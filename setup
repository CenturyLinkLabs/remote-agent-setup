#!/bin/bash

set -x
set -e

for line in `cat`; do
   eval $line
done


ssh_key="id_agent.pem"
adapter_type="fleet"
adapter_ip=""


if [[ "$AGENT_FLEET_API" != "" ]]; then
    adapter_ip="http://$AGENT_FLEET_API:4001"
    adapter_type="fleet"
else
    adapter_ip="$AGENT_KUBER_API"
    adapter_type="kubernetes"	
fi

agent_private_key=`echo $AGENT_PRIVATE_KEY | base64 --decode`

echo -e "$agent_private_key" > $ssh_key
chmod 400 $ssh_key

echo -e "\nInstalling Docker"
ssh -o StrictHostKeyChecking=no  -i $ssh_key root@$AGENT_PUBLIC_IP "echo -e \"\\nnameserver 8.8.8.8\" >> /etc/resolv.conf > /dev/null 2>&1"
ssh -o StrictHostKeyChecking=no  -i $ssh_key root@$AGENT_PUBLIC_IP "curl -sSL https://get.docker.com/ubuntu/ | sudo sh"
echo -e "\nInstalling Remote Agent/Adapter"
ssh -o StrictHostKeyChecking=no  -i $ssh_key root@$AGENT_PUBLIC_IP "curl http://download.panamax.io/agent/qa/pmx-agent-install | sudo bash  && sudo bash -c \"cd ~/pmx-agent && ./pmx-agent init -adapter-type=$adapter_type -api=$adapter_ip -agent-ip=$AGENT_PUBLIC_IP\""
ssh -o StrictHostKeyChecking=no  -i $ssh_key root@$AGENT_PUBLIC_IP "sudo bash -c \"cd ~/pmx-agent && ./pmx-agent token\"" > agent_key


key=$(sed -n '/START/,/END/p' $agent_key | awk -F "==============================" '{print $1}')
key=${key//$'\n'/}
remote_target_name=${REMOTE_TARGET_NAME:-$(cat /proc/sys/kernel/random/uuid)}
echo "{ \"name\" : \"$remote_target_name\", \"auth_blob\" : \"$key\" }" > post_data.json

docker0_ip=${DOCKER0_IP:-"172.17.42.1"}
api_port=${API_PORT:-3001}

curl -X POST \
     -H 'Content-Type:application/json' \
     -H 'Accept: application/json' \
     --data-binary @post_data.json  \
     http://${docker0_ip}:${api_port}/deployment_targets

echo -e "\nThe Panamax Remote Agent and Adapter are now installed on your Installer node ($AGENT_PUBLIC_IP)."

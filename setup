#!/bin/bash

ssh_key="id_agent.pem"

until [[ "$AGENT_PRIVATE_KEY"  != "" && "$AGENT_FLEET_API" != "" && "$AGENT_PUB_IP" != "" ]];
do
    echo "waiting for keys"
    sleep 10
done


echo Keys found
agent_private_key=`echo -e $AGENT_PRIVATE_KEY | base64 --decode`
echo -e "$agent_private_key" > $ssh_key
chmod 400 $ssh_key

ssh -o StrictHostKeyChecking=no  -i $ssh_key core@$AGENT_PUB_IP "curl http://download.panamax.io/agent/pmx-agent-install | sudo bash  && sudo bash -c \"cd ~/pmx-agent && ./pmx-agent init -adapter-type=fleet -api=http://$AGENT_FLEET_API:4001 -agent-ip=$AGENT_PUB_IP\""
ssh -o StrictHostKeyChecking=no  -i $ssh_key core@$AGENT_PUB_IP "sudo bash -c \"cd ~/pmx-agent && ./pmx-agent token\"" > agent_key

key=$(sed -n '/START/,/END/p' agent_key | awk -F "==============================" '{print $1}')
key=${key//$'\n'/}
remote_target_name=${REMOTE_TARGET_NAME:-$(cat /proc/sys/kernel/random/uuid)}
echo "{ \"name\" : \"$remote_target_name\", \"auth_blob\" : \"$key\" }" > post_data.json

docker0_ip=${DOCKER0_IP:-"172.17.42.1"}
api_port=${API_PORT:-3001}

curl -X POST \
     -H 'Content-Type:application/json' \
     -H 'Accept: application/json' \
     --data-binary @post_data.json  \
     http://${docker0_ip}:${api_port}/deployment_targets

echo -e "\nThe Panamax Remote Agent and Adapter are now installed on your Installer node ($AGENT_PUB_IP)."

until [ "1" == "0" ];
do
  sleep 20
done
